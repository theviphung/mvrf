<%= stylesheet_link_tag('login-style')%> 

<!-- Title -->
<h1>Sign Up for mvrf!</h1>

<!-- Blurb -->
<p>Let's get started! Input your information below.</p>

<div class="form-container">
    <h2>Sign Up</h2>
    <%= form_for @user do |f| %>
        <%= f.text_field :username, placeholder:"Username", class:"form-input" %><br>
        <p class="field-requirement">Password (minimum 8 characters):</p>
        <%= f.password_field :password, placeholder:"Password", class:"form-input" %><br>
        <%= f.submit "Create Account", class: "form-button" %>
    <% end %>
</div>



</body>
</html>

<%= stylesheet_link_tag('admin_login')%> 

<h1>Site Administrator</h1>

 <%= form_tag '/admin-login', class: 'admin-login-form' do %>
 <h3 class = 'admin-heading'>Authorized Personnel Only</h3>
 <p>
      <%= text_field_tag :username, params[:username], placeholder:"Username", class:"admin-input-field"%><br>
</p>
<p>
      <%= password_field_tag :password, nil, placeholder:"Password", class:"admin-input-field"%><br>
</p>
<p>
      <%= submit_tag "Log In", class: 'admin-login-button' %>
</p>       
<% end %>